                <link rel="preconnect" href="https://fonts.gstatic.com">
                <link rel="stylesheet" href="stylesheets/cinema.css">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://cdn.wallpapersafari.com/23/84/ZF8ATm.jpg" class="d-block w-100" alt="NMovie">
                        <div class="carousel-caption  d-md-block">
                            <h1 class="head-cinema">NMovie</h1>
                            <p class="head-messege">We hope you enjoy your movie!</p>
                        </div>
                    </div>
                </div>



                <div class="part-movie">
                    <p class="movie-head"><img src="/picture/cinema/location.png" style="width: 17rem; height:12rem;text-align:center;"></p>
                    <p class="pre-head">
                        <button id="sub-now" class="showing-movie decoration">Bangkok And Metropolitan Region</button>
                        <button id="sub-come" class="coming-movie decoration">Central Region</button>
                        <hr class="line line-edit">
                    </p>
                </div>

                <% if (!currentUser) { %>
                    <% } else if( currentUser && currentUser.state === 'admin' || currentUser && currentUser.state === 'cheif'){ %>
                    
                    <div class="admin-tool"><a href="/cinemas/new" style="text-decoration: none;"><i class="fa fa-plus"> </i><span class="new">Add new cinemas</span></a></div>
                    <% } %>

                <div id="now-showing">
                    <div class="album py-5">
                        <div class="container">
                            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

                                <!-- picture and detail -->
                                <% var i = 0; bkk.forEach(function(cinema){ %>
                                    <div class="col">
                                        <a href="/cinemas/<%= cinema._id %>" class="none-decoration">
                                            <div class="card shadow-sm bg-dark" style="width: 14.3rem;">
                                                <div class="card-body bg-dark">
                                                    <h5 class="card-title"><%= cinema.name %></h5>
                                                    <p class="card-title">slogan: <%= cinema.slogan %></p>
                                                    
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <% if( currentUser && currentUser.state === 'cheif' || currentUser && currentUser.state === 'admin'){ %>
                                                            <div class="d-flex justify-content-between align-items-center">
                                                              <a class="btn btn-warning" href="/cinemas/<%= cinema._id %>/edit">EDIT</a>
                                                              <form action="/cinemas/<%= cinema._id %>?_method=DELETE" method="POST">
                                                                <button type="button" class="btn btn-delete btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= i %>">DELETE</button>
                                                                <div class="modal fade" id="deleteModal<%= i %>" data-bs-backdrop="static" tabindex="-1">
                                                                <div class="modal-dialog modal-dialog-centered">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title">DELETE CINEMA</h5>
                                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            Do you want to delete this cinema ? 
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                                            <button type="submit" class="btn btn-primary">Confirm</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                </div>
                                                              </form>
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                <% i++; }); %>
                            </div>
                        </div>
                    </div>
                </div>

