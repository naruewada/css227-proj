<%- include('../partials/header.ejs') %>

<link rel="stylesheet" href="../stylesheets/slide.css">

<div class="container-fluid" style="background-color: #0c0041;">
    <div class="row">
        <div class="col-md col-sm-12" style="overflow: hidden;">
            <img src="<%= Cinemas.image %>" width="850" height="450">
        </div>
        <div class="col-md col-sm-12 pt-5 text-center">
            <ul style="list-style-type: none; color: white;">
                <div class="container-fluid" style="height: 220px;">
                    <li class="mt-3 mb-5"><img src="<%= Cinemas.logo %>" width="350px" height="200px" style="object-fit: contain;"></li>
                </div>
                <div class="container-fluid" style="height: 150px;">
                    <li><h5><%= Cinemas.slogan %></h5></li>
                </div>
            </ul>
        </div>
    </div>

    <div class="container-fluid" style="height: 20px; background-color: #0c0041;"></div>
</div>

<!-- Now showing -->
<!-- Banner -->
<div class="container-fluid bg-dark px-3 pt-4" style="height: 75px;">
    <h5 style="color: white; text-transform: uppercase;">
        &emsp;
        <span class="dot" style="background-color: rgb(255, 0, 0); margin-bottom: 1px;"></span>
      Now showing
    </h5>
</div>
<!-- End of Banner -->

<!-- Poster -->
<div class="album py-5">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            <!-- picture and detail --> 

            <% var i = 0; Movies.forEach(function(movie){ %>
                <div class="col">
                    <a href="/session/<%= Cinemas._id %>/<%= movie._id %>" class="none-decoration">
                        <div class="card shadow-sm bg-dark" style="width: 14.3rem;">
                        <img src="<%= movie.image %>" class="card-img-top" style="height: 21rem;">
                        <div class="card-body bg-dark">
                            <h5 class="card-title"><span><%= movie.name %></span></h5>
                            <p class="card-text"><span>Release Date: <%= movie.date %></span></p>
                        
                            <% if (!currentUser) { %>
                            <% } else if( currentUser && currentUser.state === 'admin' || currentUser.state === 'cheif'){ %>
                            <div class="d-flex justify-content-between align-items-center">
                                <a class="btn btn-warning" href="/movie/<%= movie._id %>/edit">edit</a>
                                <form action="/movie/<%= movie._id %>?_method=DELETE" method="POST">
                                <button type="button" class="btn btn-delete" data-bs-toggle="modal" data-bs-target="#deleteModal<%= i %>"> DELETE &nbsp;</button>

                                <div class="modal fade" id="deleteModal<%= i %>" data-bs-backdrop="static" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">DELETE MOVIE</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Do you want to delete this movie ? <%= movie.name %>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-primary">Confirm</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </form>
                            </div>
                            <% } %>
                        </div>
                        </div>
                    </a>
                </div>
            <% i++}); %>
        </div>
    </div>
</div>
<!-- End of Poster -->
<!-- End of Now showing -->



<%- include('../partials/footer.ejs') %>