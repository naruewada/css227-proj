<%- include('../partials/header.ejs') %>


<link rel="stylesheet" href="/stylesheets/new.css">

<form action="/cinemas/new" method="POST" enctype="multipart/form-data">
    <div class="container-fluid  pt-1" >
        <div class="container-fluid mt-5 mb-5" >
            
            <div class="mb-5">
                <h5 style="color: white;">Name</h5>
                <input type="text" class="form-control" required="required" name="cinema[name]" placeholder="ex. Mortal Kombat">
            </div>
            <div class="mb-5">
                <h5 style="color: white;">Slogan</h5>
                <input type="text" class="form-control" required="required" name="cinema[slogan]" placeholder="ex. Mortal Kombat">
            </div>
            <div class="mb-5">
                <h5 style="color: white;">Branch</h5>
                <input type="text" class="form-control" name="cinema[branch]" placeholder="ex. bangkok / central">
            </div>
            <h5 class="mb-3" style="color: white;">Media</h5>
            <div class="mb-5 mx-3">       
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Big scale picture</label>
                    <input type="file" class="form-control" required="required" name="image" accept="image/*">
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: white;">Logo</label>
                    <input type="file" class="form-control" required="required" name="logo" accept="image/*">
                </div>
            </div>

            <div style="height: 45px;"></div>
            <div class="container-fluid" style="height: 100%; position: relative;">
                <button class="btn btn-outline-light" type="submit" style="height: 50px; width: 100px; bottom: 15px; right: 15px; position: absolute;">Submit</button>
            </div>
                
        </div>
    </div>
</form>


<%- include('../partials/footer.ejs') %>