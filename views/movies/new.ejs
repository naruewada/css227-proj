<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/new.css">
<div class='container'>
<form action='/movie' method='POST' enctype="multipart/form-data">
    <div class="mb-3">
      <label class="form-label"><Map>Movie name</Map></label>
      <input type="text" class="form-control" name='movie[name]' placeholder='Name'>
    </div>
    <div class="mb-3">
      <label  class="form-label">Image </label>
      <input type="file" class="form-control" name='image' >
    </div>
    <div class="mb-3">
      <label  class="form-label">Date</label>
      <input type="text" class="form-control" name="movie[date]" placeholder='Release date'>
    </div>
    <div class="mb-3">
      <label  class="form-label">Rating</label>
      <input type="text" class="form-control" name="movie[rating]" placeholder='rating'>
    </div>
    <div class="mb-3">
      <label  class="form-label">Director</label>
      <input type="text" class="form-control" name="movie[director]" placeholder='actor'>
    </div>
    <div class="mb-3">
      <label  class="form-label">Rate</label>
      <input type="text" class="form-control" name="movie[rate]" placeholder='rate ex. PG-13'>
    </div>
    <div class="mb-3">
      <label  class="form-label">time</label>
      <input type="text" class="form-control" name="movie[time]" placeholder='time ex> 120 mins'>
    </div>
    <div class="mb-3">
      <label  class="form-label">trailer</label>
      <input type="text" class="form-control" name="movie[trailer]" placeholder='trailer'>
    </div>
    <div class="mb-3">
      <label  class="form-label">Genre</label>
      <input type="text" class="form-control" name="movie[genre]" placeholder='genre ex. Action'>
    </div>
    <div class="mb-3">
      <label  class="form-label">Genre</label>
      <input type="text" class="form-control" name="movie[type]" placeholder='nowshowing/comingsoon'>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href='/movie'>Go back</a>
  </form>
</div>

<%- include('../partials/footer.ejs') %>